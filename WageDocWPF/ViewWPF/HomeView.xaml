                <Border Width="150" Height="150" Background="#ecff4e">
                    <Button Width="140" Style="{StaticResource MaterialDesignFlatAccentBgButton }" Height="140" Background="#ecff4e" BorderBrush="#ecff4e">
                        <Image Source="C:\Users\Turkikaze\Desktop\3BHIF 2.Semester\PRE\WageDoc(2)\WageDoc(2)\WageDoc(05042021)\WageDoc\WageDocWPF\Image\pagamento-png-5.png" Height="70" Width="122"/>
                    </Button>
                </Border>
            </StackPanel>
        </StackPanel>
    </StackPanel>
